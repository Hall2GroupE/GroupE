@model List<events.Models.Eventtype>

<h2 class="text-heading fw-medium">Event Types</h2>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-primary">New Event</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>

          
            <th>Event Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var std in Model)
        {
            <tr>
              
                <td>@std.EventTypeName</td>
                <td>@std.Description</td>
                <td>
                    <a asp-action="Update" asp-route-id="@std.EventTypeID" class="btn btn-sm btn-primary me-2">Edit</a>
                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete(@std.EventTypeID)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Confirmation script for delete action -->
<script>
    function confirmDelete(EventTypeID) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you really want to delete this hall?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                // Redirect to the delete action with hallID
                window.location.href = `/Event/Delete/${EventTypeID}`;
            }
        });
    }
</script>

