@model List<events.Models.Eventtype>

<h1 class="text-center">Event_type</h1>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-primary">New Event</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Event ID</th>
            <th>Event Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var std in Model)
        {
            <tr>
                <td>@std.EventTypeID</td>
                <td>@std.EventTypeName</td>
                <td>@std.Price.ToString("C")</td> <!-- Display price in currency format -->
                <td>@std.Description</td>
                <td>
                    <a asp-action="Update" asp-route-id="@std.EventTypeID" class="btn btn-sm btn-primary me-2">Edit</a>
                    <form asp-action="Delete" asp-route-id="@std.EventTypeID" method="post" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this event_type?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
