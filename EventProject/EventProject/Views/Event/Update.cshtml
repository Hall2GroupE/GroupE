@model events.Models.Update
@{
}


<div class="container mt-5">
    <h2 class="text-center">Update Event</h2>
    <form asp-action="Add" method="post">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <input type="hidden" asp-for="EventTypeID" />

                <div class="form-group mb-3">
                    <label asp-for="EventTypeName" class="form-label">Type Name</label>
                    <input asp-for="EventTypeName" class="form-control" />
                    <span asp-validation-for="EventTypeName" class="text-danger"></span>
                </div>

             

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-primary me-3">Update</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>

            </div>
        </div>
    </form>
</div>
