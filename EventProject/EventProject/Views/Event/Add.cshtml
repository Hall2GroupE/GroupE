@model events.Models.Eventtype
@{
}


<div class="container mt-5">
    <h2 class="text-center">New Event</h2>
    <form asp-action="Add" method="post">
        <div class="row justify-content-center">
            <div class="col-md-6">
                
                <div class="form-group mb-3">
                    <label asp-for="EventTypeName" class="form-label">Type Name</label>
                    <input asp-for="EventTypeName" class="form-control" />
                    <span asp-validation-for="EventTypeName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-start">
                    <button type="submit" class="btn btn-primary me-3">Submit</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>

            </div>
        </div>
    </form>
</div>
